<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SenYing.MainPage"
             xmlns:vm="clr-namespace:SenYing.ViewModels"
             x:DataType="vm:MainPageViewModel"
             xmlns:model="clr-namespace:SenYing.Common.Modesl;assembly=SenYing.Common"
             >

    <CollectionView
        ItemsSource="{Binding IndexItems}">
        <CollectionView.ItemsLayout>
            <GridItemsLayout Orientation="Vertical" />
        </CollectionView.ItemsLayout>
        
        <CollectionView.ItemTemplate> 
            <DataTemplate x:DataType="model:IndexItemModel">
                <StackLayout>
                    <Label Text="{Binding Title}" />
                    <Label Text="{Binding Time}" />
                </StackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>
